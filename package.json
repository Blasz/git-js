{
  "name": "simple-git",
  "description": "Simple GIT interface for node.js",
  "version": "1.126.0",
  "author": "Steve King <steve@mydev.co>",
  "contributors": [
    {
      "name": "Steve King",
      "email": "steve@mydev.co"
    }
  ],
  "dependencies": {
    "@kwsites/file-exists": "^1.0.0",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@kwsites/test-runner": "^0.1.1",
    "@types/debug": "^4.1.5",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.11",
    "copyfiles": "^2.1.1",
    "expect": "^24.9.0",
    "mocha": "^6.2.1",
    "rimraf": "^3.0.0",
    "sinon": "^7.3.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "keywords": [
    "git",
    "source control",
    "vcs"
  ],
  "license": "MIT",
  "repository": "git://github.com/steveukx/git-js.git",
  "main": "./src/index.js",
  "files": [
    "promise.*",
    "src/",
    "typings/"
  ],
  "scripts": {
    "build:clean": "rimraf dist",
    "build:copy:js": "copyfiles --up 1 ./src/**/*.js ./dist/",
    "build:ts": "tsc --project ./tsconfig.json",
    "build": "yarn build:copy:js && yarn build:ts",
    "tsc": "tsc",
    "pretest": "yarn build",
    "test": "runner test/**/test*.js ",
    "test:unit": "runner test/unit/test*.js",
    "test:integration": "runner test/integration/test*.js",
    "preversion": "yarn test",
    "postversion": "npm publish && git push && git push --tags"
  }
}
