{
  "name": "simple-git",
  "description": "Simple GIT interface for node.js",
  "version": "1.113.0",
  "author": "Steve King <steve@mydev.co>",
  "contributors": [
    {
      "name": "Steve King",
      "email": "steve@mydev.co"
    }
  ],
  "dependencies": {
    "@kwsites/exec-p": "^0.4.0",
    "debug": "^4.0.1"
  },
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "@types/sinon": "^7.0.11",
    "expect.js": "^0.3.1",
    "mocha": "^6.1.4",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "keywords": [
    "git",
    "source control",
    "vcs"
  ],
  "license": "MIT",
  "repository": "git://github.com/steveukx/git-js.git",
  "main": "./src/index.js",
  "files": [
    "promise.*",
    "src/",
    "typings/"
  ],
  "scripts": {
    "clean": "rimraf src/**/*.map src/**/*.d.ts",
    "clean:test": "rimraf test/**/*.map test/**/*.d.ts test/**/*.spec.js",
    "pretest": "tsc --project tsconfig.dev.json",
    "test": "yarn test:ts:unit && yarn test:ts:integration",
    "test:ts:unit": "mocha ./test/**/*.spec.js",
    "test:ts:integration": "mocha ./test/**/*.spec.js",
    "test:js:unit": "nodeunit test/unit/test*.js",
    "test:js:integration": "nodeunit test/integration/test*.js",
    "preversion": "yarn test",
    "postversion": "npm publish && git push && git push --tags",
    "tsc": "tsc"
  }
}
